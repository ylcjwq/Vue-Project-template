{
  "compilerOptions": {
    "target": "ES2020",
    "rootDir": "./",
    "module": "CommonJS",
    "types": ["node"],
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "examples/**/*.ts"],
  "exclude": ["node_modules"]
}

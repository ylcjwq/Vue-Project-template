{
  "compilerOptions": {
    "target": "ES6",
    "rootDir": "./src",
    "module": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
